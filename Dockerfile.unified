FROM golang:1.23-alpine AS builder

WORKDIR /app

RUN apk add --no-cache git
ENV GOTOOLCHAIN=auto

COPY go.mod go.sum* ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /unified_system ./cmd/unified/main.go

# Runtime stage
FROM alpine:3.19

RUN apk add --no-cache ca-certificates

COPY --from=builder /unified_system /unified_system
COPY static/ /static/

EXPOSE 3000
EXPOSE 9000

CMD ["/unified_system"]
